@model Projeto_MVC.Models.AnimalModel

@{
    ViewData["Title"] = "Editar Animal";
}

<h1>Editar</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnimalId" />
            <div class="form-group">
                <label asp-for="EspecieId" class="control-label"></label>
                <select asp-for="EspecieId" class="form-control" asp-items="ViewBag.EspecieId"></select>
                <span asp-validation-for="EspecieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProprietarioId" class="control-label"></label>
                <select asp-for="ProprietarioId" class="form-control" asp-items="ViewBag.ProprietarioId"></select>
                <span asp-validation-for="ProprietarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" data-mask="000.00" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="altura" class="control-label"></label>
                <input asp-for="altura" data-mask="0.00" class="form-control" />
                <span asp-validation-for="altura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comprimento" class="control-label"></label>
                <input asp-for="Comprimento" data-mask="0.00" class="form-control" />
                <span asp-validation-for="Comprimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedigree" class="control-label"></label>
                <input asp-for="Pedigree" class="form-control" />
                <span asp-validation-for="Pedigree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
<script src="~/lib/jquery-mask-plugin/jquery.mask.js" type="text/javascript" asp-append-version="true"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
