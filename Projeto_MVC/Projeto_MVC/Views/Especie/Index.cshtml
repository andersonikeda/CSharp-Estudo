@model IEnumerable<Projeto_MVC.Models.EspecieModel>

@{
    ViewData["Title"] = "Index Espécie";
}

<h1>Index Espécie</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EspecieId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.EspecieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EspecieId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EspecieId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EspecieId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
