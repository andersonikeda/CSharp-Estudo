@model IEnumerable<MVCVendasApp.Models.VendaItensModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorDeVenda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Venda.VendaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorDeVenda)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VendaItensId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VendaItensId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VendaItensId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
